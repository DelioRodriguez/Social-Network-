@model RedSocial.Application.ViewModel.Home.HomeViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            background-color: #f5f6fa; /* Color de fondo claro */
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            body.dark-mode {
                background-color: #343a40; /* Color de fondo oscuro */
                color: #ffffff; /* Color de texto claro */
            }

        .sidebar {
            width: 250px;
            background-color: #007bff;
            border-right: 1px solid #e9ecef;
            height: 100vh;
            position: fixed;
            padding: 20px 10px;
            color: #fff;
            transition: transform 0.3s ease;
        }

            .sidebar.hidden {
                transform: translateX(-100%);
            }

            .sidebar a {
                display: block;
                color: #fff;
                padding: 10px;
                text-decoration: none;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                }

        .content {
            margin-left: 270px;
            flex: 1;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

            .content.shifted {
                margin-left: 0;
            }

        .toggle-sidebar {
            cursor: pointer;
            font-size: 24px;
            margin: 10px;
        }

        .post {
            background-color: #ffffff; /* Color de fondo claro de las publicaciones */
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            padding: 15px;
            margin: 20px auto;
            max-width: 600px;
        }

            .post.dark-mode {
                background-color: #495057; /* Color de fondo oscuro para publicaciones */
            }

    </style>
</head>
<body>

    <div class="sidebar" id="sidebar">
        <h4>Menú</h4>
        <a href="#">Inicio</a>
        <a href="Account/Profile">Mi Perfil</a>
        <a href="#">Amigos</a>
        <a href="#">Notificaciones</a>
        <a href="#">Mensajes</a>
        <a href="#">Configuración</a>
        <a href="Account/Logout">Cerrar Sesión</a>
    </div>

    <div class="content" id="content">
        <span class="toggle-sidebar" onclick="toggleSidebar()">&#9776;</span>

        <div class="container">
            <h2 class="text-center text-primary">Publicaciones</h2>

            <div class="form-check form-switch mb-4" style="float: right;">
                <input class="form-check-input" type="checkbox" id="themeSwitch" />
                <label class="form-check-label" for="themeSwitch">Modo Oscuro</label>
            </div>

            <form asp-action="CreatePost" method="post" enctype="multipart/form-data" class="mb-4">
                <div class="mb-3">
                    <textarea name="Content" class="form-control" rows="3" placeholder="Escribe tu publicación..." required></textarea>
                </div>
                <div class="mb-3">
                    <input type="file" name="ImagePath" class="form-control" accept="image/*" />
                    <input type="text" name="YoutubeUrl" class="form-control mt-2" placeholder="Enlace de Youtube" />
                </div>
                <button type="submit" class="btn btn-primary">Publicar</button>
            </form>

            @foreach (var post in Model.Posts)
            {
                <div class="post" id="post-@post.Id">
                    <div class="post-header d-flex align-items-center">
                        <img src="@post.UserProfileImage" alt="Foto de perfil" class="rounded-circle" style="width: 50px; height: 50px; margin-right: 15px;" />
                        <h3>@post.UserName</h3>
                    </div>
                    <p>@post.Content</p>
                    @if (!string.IsNullOrEmpty(post.ImagePath))
                    {
                        <img src="@post.ImagePath" alt="Imagen" class="img-fluid mb-2" />
                    }
                    @if (!string.IsNullOrEmpty(post.YoutubeUrl))
                    {
                        <iframe width="100%" height="315" src="@post.YoutubeUrl" frameborder="0" allowfullscreen></iframe>
                    }

                    <h4 class="mt-4">Comentarios</h4>
                    <div class="comment-container" id="comments-@post.Id">
                        @foreach (var comment in post.Comments)
                        {
                            <div class="comment">
                                <strong>@comment.UserName:</strong> @comment.Content
                            </div>
                        }
                    </div>

                    <form asp-action="CreateComment" method="post" class="mt-2">
                        <input type="hidden" name="PostId" value="@post.Id" />
                        <textarea name="Content" class="form-control" rows="2" placeholder="Escribe un comentario..." required></textarea>
                        <button type="submit" class="btn btn-primary mt-2">Comentar</button>
                    </form>

                    @if (post.UserId == Model.CurrentUserId)
                    {
                        <form asp-action="DeletePost" method="post" class="mt-2">
                            <input type="hidden" name="id" value="@post.Id" />
                            <button type="submit" class="btn btn-danger">Eliminar Publicación</button>
                        </form>
                    }
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const content = document.getElementById("content");

            sidebar.classList.toggle("hidden");
            content.classList.toggle("shifted");
        }

        $(document).ready(function () {
            // Al cargar la página, comprueba el tema
            const theme = localStorage.getItem('theme');
            if (theme === 'dark') {
                $('body').addClass('dark-mode');
                $('.post').addClass('dark-mode');
                $('#themeSwitch').prop('checked', true);
            }

            // Cambiar el tema al usar el switch
            $('#themeSwitch').on('change', function () {
                if ($(this).is(':checked')) {
                    $('body').addClass('dark-mode');
                    $('.post').addClass('dark-mode');
                    localStorage.setItem('theme', 'dark');
                } else {
                    $('body').removeClass('dark-mode');
                    $('.post').removeClass('dark-mode');
                    localStorage.setItem('theme', 'light');
                }
            });
        });
    </script>
</body>
</html>
