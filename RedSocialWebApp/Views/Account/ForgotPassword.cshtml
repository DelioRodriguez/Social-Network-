@model RedSocial.Application.ViewModel.Users.ForgotPasswordViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="bg-image" style="background-image: url('/images/forgot-password-bg.jpg');">
    <div class="overlay d-flex justify-content-center align-items-center">
        <div class="glass-card">
            <h2 class="text-center mb-4">Recuperar Contraseña</h2>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-4">
                    <label asp-for="Username" class="form-label">Usuario</label>
                    <input asp-for="Username" class="form-control glass-input" placeholder="Ingresa tu usuario" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary-custom w-100 mb-3">Enviar Enlace de Restablecimiento</button>
            </form>
            <div class="text-center">
                <a asp-action="Login" class="text-link">Volver al inicio de sesión</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
