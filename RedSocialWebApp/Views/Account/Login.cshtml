@model RedSocial.Application.ViewModel.Users.UserLoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SRc Network</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('https://img.freepik.com/vector-gratis/fondo-poli-futurista_23-2148453991.jpg?ga=GA1.1.699618772.1729272255&semt=ais_hybrid');
            background-size: cover;
            background-position: center;
            position: relative;
            color: #fff;
        }

            .login-page::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 1;
            }

        .login-container {
            display: flex;
            width: 90%;
            max-width: 1200px;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 2;
        }

        .login-left {
            flex: 1;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            text-align: center;
        }

        .brand-container {
            max-width: 300px;
        }

        .brand-title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #fff;
        }

        .brand-subtitle {
            font-size: 1.2rem;
            font-weight: 300;
            color: #e0e0e0;
        }

        .login-right {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-left: 1px solid #ccc;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: #333;
        }

            .login-card h2 {
                margin-bottom: 1.5rem;
                color: #2a5298;
                font-weight: bold;
            }

        .form-floating > .form-control {
            height: calc(3.5em + 2px);
            padding: 1.2rem 0.75rem 0.2rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-floating > .form-control:focus {
                border-color: #2a5298;
                box-shadow: 0 0 0 0.2rem rgba(42, 82, 152, 0.25);
            }

        .form-label {
            color: #666;
            font-weight: 500;
        }

        .btn-primary-custom {
            background-color: #2a5298;
            border: none;
            color: #fff;
            font-size: 1rem;
            padding: 0.75rem;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-primary-custom:hover {
                background-color: #1e3c72;
                transform: translateY(-2px);
            }

        .btn-outline-custom {
            border: 2px solid #2a5298;
            color: #2a5298;
            font-size: 1rem;
            padding: 0.75rem;
            transition: background-color 0.3s, color 0.3s, transform 0.3s;
        }

            .btn-outline-custom:hover {
                background-color: #2a5298;
                color: #fff;
                transform: translateY(-2px);
            }

        .text-link {
            color: #2a5298;
            text-decoration: none;
            font-weight: 500;
        }

            .text-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="login-page">
        <div class="login-container">
            <div class="login-left">
                <div class="brand-container">
                    <h1 class="brand-title">SRc Network</h1>
                    <p class="brand-subtitle">Conéctate con tus amigos y el mundo a través de nuestra red social.</p>
                </div>
            </div>

            <div class="login-right">
                <div class="login-card">
                    <h2 class="text-center">Iniciar Sesión</h2>
                    <form asp-action="Login" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Usuario" />
                            <label for="username">Usuario</label>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Contraseña" />
                            <label for="password">Contraseña</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary-custom w-100 mb-3">Iniciar Sesión</button>
                        <div class="text-end mb-3">
                            <a asp-action="ForgotPassword" class="text-link">¿Olvidaste tu contraseña?</a>
                        </div>
                    </form>
                    <hr class="my-4" />
                    <div class="text-center">
                        <a asp-action="Register" class="btn btn-outline-custom w-100">Crear una cuenta</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
