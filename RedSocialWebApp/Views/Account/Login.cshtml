@model RedSocial.Application.ViewModel.Users.UserLoginViewModel

@{
    Layout = "_Layout"; // Cambia a null si no usas un Layout compartido
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="bg-image" style="background-image: url('/images/login-bg.jpg');">
    <div class="overlay d-flex justify-content-center align-items-center">
        <div class="glass-card">
            <h2 class="mb-4 text-center">Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-4">
                    <label asp-for="Username" class="form-label">Usuario</label>
                    <input asp-for="Username" class="form-control glass-input" placeholder="Ingresa tu usuario" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control glass-input" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary-custom w-100 mb-3">Iniciar Sesión</button>
                <div class="text-end mb-3">
                    <a asp-action="ForgotPassword" class="text-link">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
            <hr class="my-4" />
            <div class="text-center">
                <a asp-action="Register" class="btn btn-outline-custom w-100">Crear una cuenta</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
