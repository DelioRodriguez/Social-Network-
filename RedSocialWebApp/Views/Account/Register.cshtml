@model RedSocial.Application.ViewModel.Users.UserRegisterViewModel

@{
    Layout = null; 
    ViewData["Title"] = "Crear Cuenta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SRc Network</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('https://img.freepik.com/vector-gratis/fondo-poli-futurista_23-2148453991.jpg?ga=GA1.1.699618772.1729272255&semt=ais_hybrid');
            background-size: cover;
            background-position: center;
            position: relative;
            color: #fff;
        }

        .register-container {
            display: flex;
            width: 90%;
            max-width: 1200px;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .register-left {
            flex: 1;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            text-align: center;
        }

        .brand-container {
            max-width: 300px;
        }

        .brand-title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #fff;
        }

        .brand-subtitle {
            font-size: 1.2rem;
            font-weight: 300;
            color: #e0e0e0;
        }

        .register-right {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-left: 1px solid #ccc;
        }

        .register-card {
            width: 100%;
            max-width: 700px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: #333;
        }

        .register-card h2 {
            margin-bottom: 1.5rem;
            color: #2a5298;
            font-weight: bold;
        }
        .form-floating > .form-control {
            height: calc(3.5em + 2px);
            padding: 1.2rem 0.75rem 0.2rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-floating > .form-control:focus {
            border-color: #2a5298;
            box-shadow: 0 0 0 0.2rem rgba(42, 82, 152, 0.25);
        }

        .form-label {
            color: #666;
            font-weight: 500;
        }

        .btn-primary-custom {
            background-color: #2a5298;
            border: none;
            font-size: 1rem;
            padding: 0.75rem;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary-custom:hover {
            background-color: #1e3c72;
            transform: translateY(-2px);
        }

        .btn-outline-custom {
            border: 2px solid #2a5298;
            color: #2a5298;
            font-size: 1rem;
            padding: 0.75rem;
            transition: background-color 0.3s, color 0.3s, transform 0.3s;
        }

        .btn-outline-custom:hover {
            background-color: #2a5298;
            color: #fff;
            transform: translateY(-2px);
        }

        .custom-file-upload {
            display: flex;
            align-items: center;
            cursor: pointer;
            background-color: #f0f0f0;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s, border-color 0.3s;
        }

        .custom-file-upload:hover {
            background-color: #e0e0e0;
            border-color: #2a5298;
        }

        .custom-file-upload input[type="file"] {
            display: none;
        }

        .preview-img {
            margin-top: 1rem;
            max-width: 100%;
            max-height: 200px;
            border-radius: 0.375rem;
            display: none;
        }

       

            .brand-title {
                font-size: 2.5rem;
            }

            .register-card {
                padding: 20px;
            }
        }

        .register-form .row {
            margin-bottom: 1rem;
        }

        .register-form .col-md-6 {
            padding-right: 0.5rem;
            padding-left: 0.5rem;
        }

        .register-form .form-group {
            margin-bottom: 1rem;
        }

    </style>
</head>
<body>

    <div class="register-page">
        <div class="register-container">
            <div class="register-left">
                <div class="brand-container">
                    <h1 class="brand-title">SRc Network</h1>
                    <p class="brand-subtitle">Conéctate y comparte con personas alrededor del mundo.</p>
                </div>
            </div>

            <div class="register-right">
                <div class="register-card">
                    <h2 class="text-center">Crear Cuenta</h2>
                    <form asp-action="Register" method="post" enctype="multipart/form-data" class="register-form">
                        <div class="row">
                              <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FirstName" class="form-control" id="firstName" placeholder="Nombre" />
                                    <label for="firstName">Nombre</label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LastName" class="form-control" id="lastName" placeholder="Apellido" />
                                    <label for="lastName">Apellido</label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                          
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Username" class="form-control" id="username" placeholder="Usuario" />
                                    <label for="username">Usuario</label>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>
                            </div>
                           
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Correo Electrónico" />
                                    <label for="email">Correo Electrónico</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Phone" type="tel" class="form-control" id="phone" placeholder="Teléfono" />
                                    <label for="phone">Teléfono</label>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Contraseña" />
                                    <label for="password">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirmar Contraseña" />
                                    <label for="confirmPassword">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ProfilePicture" type="file" class="form-control custom-file-upload" id="profilePicture" placeholder="Subir Foto de Perfil" />
                                    <label for="profilePicture">Subir Foto de Perfil</label>
                                    <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary-custom w-100 mb-3">Registrar</button>
                        <a href="/Account/Login" class="btn btn-outline-custom w-100">Ya tengo una cuenta</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
